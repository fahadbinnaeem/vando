<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="colorPrimary">@color/primaryL</item>-->
        <!--<item name="colorPrimaryDark">@color/primaryL_dark</item>-->
        <!--<item name="colorControlNormal">@color/primaryL_light</item>-->
        <!--<item name="colorControlActivated">@color/white</item>-->
        <!--<item name="colorControlHighlight">@color/white</item>-->
        <!--<item name="android:textColorHint">@color/primaryL_light</item>-->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryL</item>
        <item name="colorPrimaryDark">@color/primaryL_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primaryL</item>


        <item name="colorControlNormal">@color/primaryL_light</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/primaryL_light</item>

        <item name="colorButtonNormal">@color/primaryL_dark</item>
        <item name="android:colorButtonNormal">@color/primaryL_dark</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primaryL</item>
    </style>
    <style name="AppTheme.Light.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primaryL</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
